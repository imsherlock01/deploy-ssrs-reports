{
    "manifestVersion": 1,
    "id": "deploy-ssrs-reports",
    "name": "Deploy SSRS Reports",
    "version": "0.0.8",
    "publisher": "imsherlock01",
	"public":  true,
    "tags": [
        "SSRS",
        "rdl",
		"reports",
        "Reporting",
		"SQL Server Reporting Services",
        "Publish SSRS",
        "Deploy SSRS"
	],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Publish SSRS reports & Delete Published report folders",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/extension-icon.png"        
    },
    "files": [
        {
            "path": "publish-ssrs-reports"
        },
        {
            "path": "delete-report-folder"
        }
    ],
	"content": {
		"details": {
			"path": "overview.md"
		},
		"license": {
			"path": "license.md"
		}
	},
    "contributions": [
        {
            "id": "publish-ssrs-reports",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "publish-ssrs-reports"
            }
        },
        {
            "id": "delete-report-folder",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "delete-report-folder"
            }
        }
    ]
}